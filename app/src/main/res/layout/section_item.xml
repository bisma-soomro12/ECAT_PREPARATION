<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_section"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_view_circle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/math"
            app:civ_border_color="@color/backBlue"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="@color/backBlue"/>

        <TextView
            android:id="@+id/recycle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/backBlue"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_gravity="center"
                />
</LinearLayout>